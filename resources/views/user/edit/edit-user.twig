{% extends 'templates/app.twig' %}


{% block content %}
{% include 'templates/partials/side-nav.twig' %}
<section class="forms"> 
  <div class="container-fluid">
    <div class="row">
    	<!-- Basic Form-->
    	<div class="col-lg-8 offset-lg-2">
    	  <div class="card">
    	    <div class="card-header">
    	      <h3 class="h4">Edit your information</h3>
    	    </div>
    	    <div class="card-body">
    	    	<div class="row">
    	    		<div class="col-sm-6">
    	    			<div class="wrap-custom-file main-image">
  	    			    <input type="file" name="image1" id="image1" accept=".gif, .jpg, .png" />
  	    			    <label  for="image1">
  	    			      <span>Select Main Image</span>
  	    			      <i class="fa fa-plus-circle"></i>
  	    			    </label>
  	    			  </div>
    	    		</div>
    	    		<div class="col-sm-3">
    	    			<div class="row">
	    	    			<div class="wrap-custom-file">
    	    			    <input type="file" name="image2" id="image2" accept=".gif, .jpg, .png" />
    	    			    <label  for="image2">
    	    			      <span>Select Image Two</span>
    	    			      <i class="fa fa-plus-circle"></i>
    	    			    </label>
    	    			  </div>
    	    			</div>
    	    			<div class="row">
    	    				<div class="wrap-custom-file">
  	    				    <input type="file" name="image3" id="image3" accept=".gif, .jpg, .png" />
  	    				    <label  for="image3">
  	    				      <span>Select Image Three</span>
  	    				      <i class="fa fa-plus-circle"></i>
  	    				    </label>
  	    				  </div>
    	    			</div>
    	    		</div>
    	    		<div class="col-sm-3">
    	    			<div class="row">
	    	    			<div class="wrap-custom-file">
    	    			    <input type="file" name="image4" id="image4" accept=".gif, .jpg, .png" />
    	    			    <label  for="image4">
    	    			      <span>Select Image Four</span>
    	    			      <i class="fa fa-plus-circle"></i>
    	    			    </label>
    	    			  </div>
    	    			</div>
    	    			<div class="row">
    	    				<div class="wrap-custom-file">
  	    				    <input type="file" name="image5" id="image5" accept=".gif, .jpg, .png" />
  	    				    <label  for="image5">
  	    				      <span>Select Image Five</span>
  	    				      <i class="fa fa-plus-circle"></i>
  	    				    </label>
  	    				  </div>
    	    			</div>
    	    		</div>
    	    	</div>
    	    </div>
    	    <div class="card-body">
    	      <form action="{{ path_for('auth.edit.user') }}" method="post">
  		      	<div class="form-group">
  	      	    <label class="form-control-label">About me:</label>
  	      	    <textarea class="form-control" rows="4" maxlength="250"></textarea>
  	      	    <small><span id="remain">0</span>/250</small>
  	      	  </div>
  	      	  <div class="line"></div>
  	      	  <div class="form-group row">
      	        <div class="col-md-4">
      	          <label class="form-control-label">User Name</label>
      	          <input type="text" name="username" value="{{ edit.username }}" class="form-control" maxlength="100">
      	        </div>
      	        <div class="col-md-4">
      	        	<label class="form-control-label">First Name</label>
      	          <input type="text" name="name" value="{{ edit.name }}" class="form-control" maxlength="100">
      	        </div>
      	        <div class="col-md-4">
      	        	<label class="form-control-label">Last Name</label>
      	          <input type="text" name="surname" value="{{ edit.surname }}" class="form-control" maxlength="100">
      	        </div>
  	      	  </div>
    	        <div class="line"></div>
  	      	  <p class="bright-heading">What are you passioned about?</p>
  	      	  <div class="form-group">
	      	      <select multiple="" class="form-control" data-placeholder="Add interests">
	      	        <option value="photo">photo</option>
	      	        <option value="yoga">yoga</option>
	      	        <option value="films">films</option>
	      	        <option value="rock">rock</option>
	      	        <option value="pop">pop</option>
	      	        <option value="veg">veg</option>
	      	        <option value="steaks">steaks</option>
	      	        <option value="music">music</option>
	      	        <option value="gum">gum</option>
	      	        <option value="workout">workout</option>
	      	        <option value="make up">make up</option>
	      	        <option value="fun">fun</option>
	      	      </select>
  	      	  </div>
  	      	  <div class="line"></div>
  	      	  <p class="bright-heading">Share your social media links</p>
    	        <div class="form-group">
    	          <label class="form-control-label">Instagram</label>
    	          <input type="text" class="form-control">
    	        </div>
    	        <div class="form-group">
    	          <label class="form-control-label">Facebook</label>
    	          <input type="text" class="form-control">
    	        </div>
    	        <div class="form-group">
    	          <label class="form-control-label">Twitter</label>
    	          <input type="text" class="form-control">
    	        </div>
    	        <div class="form-group">
    	          <label class="form-control-label">Google +</label>
    	          <input type="text" class="form-control">
    	        </div>
    	        <div class="form-group">
    	          <input type="submit" value="Update profile" class="btn btn-primary">
    	        </div>
    	        {{ csrf.field | raw }}{# raw скроет строку #}
    	      </form>
    	    </div>
    	  </div>
    	</div>
    </div>
  </div>
</section>

{% include 'templates/partials/footer.twig' %}
{% endblock %}
