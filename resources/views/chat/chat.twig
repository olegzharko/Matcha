

{% extends 'templates/app.twig' %}

{% block content %}
    {% include 'templates/partials/side-nav.twig' %}

    <!-- Client Section-->
    <section class="forms">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <form name="frmChat" action="{{ path_for('chat.addMessage') }}" method="post"  id="frmChat" >
                                <div id="chat-box">
                                    {% for message in arrMessage %}
                                        <p>{{ message.id  }} {{ message.message }}</p>
                                    {% endfor %}
                                </div>
                                <input type="hidden" name="chat-user" id="chat-user" placeholder="Name" class="chat-input" required value="{{ message_id.username }}"/>
                                <input type="text" name="chat-message" id="chat-message" placeholder="Message"  class="chat-input chat-message" required />
                                <input type="submit" id="btnSend" name="send-chat-message" value="Send" >
                                {{ csrf.field | raw }}{# raw скроет строку #}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% include 'templates/partials/footer.twig' %}
{% endblock %}
