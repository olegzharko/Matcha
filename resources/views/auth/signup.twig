{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="home">
                <div class="panel panel-default">
                    <div class="panel-heading">Sing up</div>
                    <div class="panel-body">
                        <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                            

                            <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                                <label for="email">Email</label>
                                <input type="emial" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
                                {% if errors.email %}
                                    {#  first - это показать первую строку с массива email  по сосоянию ошибки #}
                                    <span class="help-block">{{ errors.email | first }}</span>
                                {% endif %}
                            </div>


                            <div class="form-group{{ errors.username ? ' has-error' : '' }}">
                                <label for="username">Username</label>
                                <input type="text" name="username" class="form-control" value="{{ old.username }}">
                                {% if errors.username %}
                                    {#  first - это показать первую строку с массива email  по сосоянию ошибки #}
                                    <span class="help-block">{{ errors.username | first }}</span>
                                {% endif %}
                            </div>



                            <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control" value="{{ old.name }}">
                                {% if errors.name %}
                                    {#  first - это показать первую строку с массива email  по сосоянию ошибки #}
                                    <span class="help-block">{{ errors.name | first }}</span>
                                {% endif %}
                            </div>


                            <div class="form-group{{ errors.surname ? ' has-error' : '' }}">
                                <label for="surname">Surname</label>
                                <input type="text" name="surname" class="form-control" value="{{ old.surname }}">
                                {% if errors.surname %}
                                    {#  first - это показать первую строку с массива email  по сосоянию ошибки #}
                                    <span class="help-block">{{ errors.surname | first }}</span>
                                {% endif %}
                            </div>


                            <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                                <label for="password">Password</label>
                                <input type="password" name="password" class="form-control">
                                {% if errors.password %}
                                    {#  first - это показать первую строку с массива email  по сосоянию ошибки #}
                                    <span class="help-block">{{ errors.password | first }}</span>
                                {% endif %}
                            </div>

                            <div class="form-group{{ errors.password_repeat ? ' has-error' : '' }}">
                                <label for="password_repeat">Password repeat</label>
                                <input type="password" name="password_repeat" class="form-control">
                                {% if errors.password_repeat %}
                                    {#  first - это показать первую строку с массива email  по сосоянию ошибки #}
                                    <span class="help-block">{{ errors.password_repeat | first }}</span>
                                {% endif %}
                            </div>
                            

                            <button type="submit" class="btn btn-default">Sign up</button>
                            {{ csrf.field | raw }}{# raw скроет строку #}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}