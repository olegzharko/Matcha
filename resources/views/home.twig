{% extends 'templates/app.twig' %}

{% block content %}
	{% include 'templates/partials/side-nav.twig' %}
		<!-- User Section-->
		<section class="client">
			<div class="container-fluid">
				<div class="row">
					<!-- User Profile -->
					<div class="col-lg-8 offset-lg-2">
						<div class="client card">
							<div class="card-body text-left">
								{#{% if about.user_photo is defined %}
								<div class="carousel__container">
							    <button class="prev">Prev</button>
							    <button class="next">Next</button>
							    <div class="slider-container">
							      <div class="slider">
							        <div class="slide first"></div>
							        <div class="slide second"></div>
							        <div class="slide third"></div>
							        <div class="slide fourth"></div>
							        <div class="slide fifth"></div>
							      </div>
							    </div>
							  </div>
							  {% endif %}#}
								{#{% if about.user_photo is defined %}
								<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
								  <ol class="carousel-indicators">
								    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
								    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
								    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
								  </ol>
								  <div class="carousel-inner">
								  	{% for photo in about.user_photo %}
								  		<div class="carousel-item">
									      <img class="card-img-top d-block w-100" src="{{ photo }}" alt="User Photo">
									    </div>
								  	{% endfor %}
								    <div class="carousel-item active">
								      <img class="card-img-top d-block w-100" src="{{ about.user_photo.0 }}" alt="First slide">
								    </div>
								    <div class="carousel-item">
								      <img class="card-img-top d-block w-100" src="{{ about.user_photo.1 }}" alt="Second slide">
								    </div>
								    <div class="carousel-item">
								      <img class="card-img-top d-block w-100" src="{{ about.user_photo.2 }}" alt="Third slide">
								    </div>
								    <div class="carousel-item">
								      <img class="card-img-top d-block w-100" src="{{ about.user_photo.3 }}" alt="Third slide">
								    </div>
								    <div class="carousel-item">
								      <img class="card-img-top d-block w-100" src="{{ about.user_photo.4 }}" alt="Third slide">
								    </div>
								  </div>
								  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
								    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
								    <span class="sr-only">Previous</span>
								  </a>
								  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
								    <span class="carousel-control-next-icon" aria-hidden="true"></span>
								    <span class="sr-only">Next</span>
								  </a>
								</div>
								{% endif %}#}
								<div class="client-title text-center">
									<h3>{{ auth.user.username }},</h3><span>{{ about.age }}</span>
								</div>
									<h5 class="card-title">About me:</h5>
									<p class="card-text">{{ about.about_me }}</p>
									<h5 class="card-title">My interests:</h5>
									<div id="user-tags">
										{% for interest in about.user_interests %}
												<span class="badge badge-info">{{ interest }}</span>
										{% endfor %}
									</div>
									<h5 class="card-title mt-3">Popularity:</h5>
									<div class="progress" style="height: 4px">
									  <div class="progress-bar bg-red" role="progressbar" style="width: 20%; height: 4px;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
									</div>
									<h6 class="card-subtitle mt-3 mb-4 text-muted">low (try to write more information in your profile)</h6>
									<div class="text-center">
										<a href="/auth/edit/user" class="btn btn-primary">Edit profile</a>
									</div>

								<div class="client-social d-flex justify-content-between"><a href="#" target="_blank"><i class="fa fa-facebook"></i></a><a href="#" target="_blank"><i class="fa fa-twitter"></i></a><a href="#" target="_blank"><i class="fa fa-google-plus"></i></a><a href="#" target="_blank"><i class="fa fa-instagram"></i></a></div>
							</div>
						</div>
					</div> <!-- end of user profile -->
				</div>
			</div>
		</section>
	{% include 'templates/partials/footer.twig' %}
{% endblock %}
